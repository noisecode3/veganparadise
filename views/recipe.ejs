<html>
    <head>
        <title>Vegan Paradise</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
        <link rel="stylesheet" href="https://localhost/assets/css/main.css" />
        <noscript>
            <link rel="stylesheet" href="https://localhost/assets/css/noscript.css" />
        </noscript>
    </head>
    <body class="is-preload landing">
        <div id="page-wrapper">
            <!-- Header -->
            <header id="header">
                <h1 id="logo"><a href="index.html">Vegan Paradise</a></h1>
                <nav id="nav">
                    <ul>
                        <li><a href="index.html">Home</a></li>
                        <li><a href="menu.html">Menu</a></li>
                        <li>
                            <a href="#">Debug</a>
                            <ul>
                                <li><a href="form.html">Form</a></li>
                                <li><a href="login.html">Login</a></li>
                                <li><a href="signup.html">Signup</a></li>
                                <li><a href="elements.html">Elements</a></li>
                            </ul>
                        </li>
                        <li><a href="#" class="button primary">Sign Up</a></li>
                    </ul>
                </nav>
            </header>

            <!-- Main -->
            <div id="main" class="wrapper style1">
                <div class="container">
                    <header class="major">
                        <h2><%= recipe.name %></h2>
                    </header>
                    <div class="row gtr-150">
                        <div class="col-8 col-12-medium">

                            <!-- Content -->
                            <section id="content">
                                <img src="/image/<%= recipe.pictureId %>" class="image fit" alt="">
                                <ol>
                                    <% const bodyArray = recipe.body ? recipe.body.split(';') : [] %>
                                    <% bodyArray.forEach((instruction, index) => { %>
                                    <% if (instruction.trim() !== '') { %>
                                    <li><%= instruction.trim() %></li>
                                    <% } %>
                                    <% }) %>
                                </ol>
                            </section>
                        </div>
                        <div class="col-4 col-12-medium">
                          <!-- Ingredients -->
                          <% let dishIngredients = {}; %>
                          <% ingredients.forEach(ingredient => { %>
                              <% if (!dishIngredients[ingredient.dishName]) { %>
                                  <% dishIngredients[ingredient.dishName] = []; %>
                              <% } %>
                              <% dishIngredients[ingredient.dishName].push(ingredient); %>
                          <% }) %>

                          <% Object.keys(dishIngredients).forEach(dishName => { %>
                              <% const ingredientsForDish = dishIngredients[dishName]; %>
                              <% if (ingredientsForDish.length > 0) { %>
                                  <section id="sidebar">
                                      <h3><%= dishName %></h3>
                                      <ol>
                                          <% ingredientsForDish.forEach(ingredient => { %>
                                              <li><%= ingredient.name %>: 
                                                  <% if (ingredient.quantity !== null) { %>
                                                      <%= ingredient.quantity %>
                                                  <% } %>
                                                  <% if (ingredient.unit) { %>
                                                      <%= ingredient.unit %>
                                                  <% } %>
                                              </li>
                                          <% }) %>
                                      </ol>
                                  </section>
                              <% } %>
                          <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer -->
        <footer id="footer">
            <ul class="icons">
                <li><a href="#" class="icon brands alt fa-twitter">
                        <span class="label">Twitter</span></a></li>
                <li><a href="#" class="icon brands alt fa-facebook-f">
                        <span class="label">Facebook</span></a></li>
                <li><a href="#" class="icon brands alt fa-linkedin-in">
                        <span class="label">LinkedIn</span></a></li>
                <li><a href="#" class="icon brands alt fa-instagram">
                        <span class="label">Instagram</span></a></li>
                <li><a href="#" class="icon brands alt fa-github">
                        <span class="label">GitHub</span></a></li>
                <li><a href="#" class="icon solid alt fa-envelope">
                        <span class="label">Email</span></a></li>
            </ul>
            <ul class="copyright">
                <li>&copy; Vegan Spaghetti AB. All rights reserved.</li>
            </ul>
        </footer>
        </div>
        <!-- Scripts -->
        <script src="https://localhost/assets/js/jquery.min.js"></script>
        <script src="https://localhost/assets/js/jquery.scrolly.min.js"></script>
        <script src="https://localhost/assets/js/jquery.dropotron.min.js"></script>
        <script src="https://localhost/assets/js/jquery.scrollex.min.js"></script>
        <script src="https://localhost/assets/js/browser.min.js"></script>
        <script src="https://localhost/assets/js/breakpoints.min.js"></script>
        <script src="https://localhost/assets/js/util.js"></script>
        <script src="https://localhost/assets/js/main.js"></script>

    </body>
</html>
